<UserControl
    x:Class="MyTrips.UWP.Controls.ProfileViewTabControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyTrips.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid  Height="60">
        <Grid Height="60" Background="{StaticResource ListTabColor}" Margin="30,0,0,0">
            <TextBlock Name="Value" Text="{Binding }" Style="{StaticResource ProfileTabStyle}"/>
        </Grid>
        <Ellipse Fill="{StaticResource TripCompletionCircleColor}" Height="60" Width="60" HorizontalAlignment="Left"></Ellipse>
        <StackPanel Width="60" HorizontalAlignment="Left" Margin="0,17,0,0">
            <TextBlock Text="{x:Bind Title1}"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="SegoeUI-Semilight" FontSize="11" Foreground="#e5e5e5"/>
            <TextBlock Text="{x:Bind Title2}"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="SegoeUI-Semilight" FontSize="11" Foreground="#e5e5e5"/>
        </StackPanel>
    </Grid>
</UserControl>
